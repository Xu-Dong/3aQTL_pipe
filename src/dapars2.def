Bootstrap: docker
From: gaow/base-notebook:latest


%labels
maintainer = "Liucheng Shi<ls3751@cumc.columbia.edu>"
%post


LC_ALL=C.UTF-8
LANG=C.UTF-8

su -  root # USER root
apt-get update && apt-get install -y python2 && apt-get clean && \
apt-get autoremove -y && \
rm -rf /var/lib/{apt,dpkg,cache,log}/
curl https://bootstrap.pypa.io/pip/2.7/get-pip.py -o get-pip.py
python2 get-pip.py
python2.7 -m pip install numpy scipy
R -e "install.packages(c('doParallel', 'VIM', 'BiocManager'), dependencies=TRUE, repos='http://cran.rstudio.com/')"
Rscript -e 'BiocManager::install("preprocessCore")'
conda install -y -c bioconda/label/cf201901 bedtools

# Dapars scripts
for i in DaPars_Extract_Anno.py Dapars2_Multi_Sample.py gtf2bed12.py; do wget https://raw.githubusercontent.com/cumc/xqtl-pipeline/main/code/${i} \
&& mv ${i} /usr/local/bin/ && chmod +x /usr/local/bin/${i}; done
%environment
export LC_ALL=C.UTF-8
export LANG=C.UTF-8
%runscript
exec /bin/bash "$@"
%startscript
exec /bin/bash "$@"
